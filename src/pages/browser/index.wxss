page {
  width: 100%;
  height: 100%;
  overflow-y: hidden;
}
.browser {
  position: relative;
  width: 100%;
  height: 100%;
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}
.browser .btnGrp {
  display: flex;
  width: 100%;
  position: fixed;
  bottom: 0;
  margin-top: 3%;
  margin-bottom: 3%;
}
.browser .btnGrp .button {
  border-radius: 80rpx;
  height: 80rpx;
  line-height: 80rpx;
  font-size: 36rpx;
  text-align: center;
  transition: all 0.2s;
}
.browser .btnGrp .button.btn-hover {
  transform: scale(0.85);
}
.browser .btnGrp .button.pink {
  width: 50%;
  color: white;
  background: #FF3366;
  margin-left: 3%;
  margin-right: 5%;
}
.browser .btnGrp .button.white {
  width: 270rpx;
  border: 1px solid #FF3366;
  color: #FF3366;
  background: white;
  margin-left: 5%;
}
