page {
  width: 100%;
  height: auto;
  position: relative;
  -webkit-overflow-scrolling: touch;
}
.browser {
  position: relative;
  width: 100%;
  height: auto;
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}
.browser .navBar {
  height: auto;
  width: 100%;
  background-color: white;
  position: fixed;
  transition: all 0.2s;
  z-index: 1;
}
.browser .navBar .scroll {
  white-space: nowrap;
  display: flex;
  width: auto;
  transition: all 0.2s;
  padding-top: 3%;
  padding-bottom: 3%;
  padding-left: 3%;
  padding-right: 3%;
}
.browser .navBar .scroll .item {
  display: inline-block;
  position: relative;
  margin-left: 1%;
  margin-right: 1%;
  transition: all 0.2s;
  height: auto;
  width: auto;
}
.browser .navBar .scroll .item .itemImg {
  transition: all 0.2s;
  border-radius: 4%;
}
.browser .navBar .scroll .item.item-hover {
  transform: scale(0.95);
}
.browser .waterfall {
  width: 100%;
  top: 0;
  display: flex;
}
.browser .waterfall .left-div {
  display: flex;
  flex-direction: column;
  width: 50%;
  height: auto;
  position: relative;
  z-index: 0;
  align-items: center;
}
.browser .waterfall .left-div .card {
  background-color: black;
  width: 90%;
  height: auto;
  margin-top: 5%;
  margin-left: 3.5%;
  border-radius: 4%;
}
.browser .waterfall .left-div .card .cardImg {
  border-radius: 4%;
}
.browser .waterfall .left-div .card.card-hover {
  transform: scale(0.95);
}
.browser .waterfall .right-div {
  display: flex;
  flex-direction: column;
  width: 50%;
  height: auto;
  position: relative;
  z-index: 0;
  align-items: center;
}
.browser .waterfall .right-div .card {
  background-color: black;
  width: 90%;
  height: auto;
  margin-top: 5%;
  margin-right: 3.5%;
  border-radius: 4%;
}
.browser .waterfall .right-div .card .cardImg {
  border-radius: 4%;
}
.browser .waterfall .right-div .card.card-hover {
  transform: scale(0.95);
}
.browser .divider {
  align-items: center;
  justify-content: center;
  font-size: 30rpx;
  color: #FF3366;
  margin-bottom: 20%;
  margin-top: 3%;
}
.browser .btnGrp {
  display: flex;
  width: 100%;
  position: fixed;
  bottom: 0;
  padding-top: 3%;
  padding-bottom: 3%;
  background-color: white;
}
.browser .btnGrp .button {
  border-radius: 80rpx;
  height: 80rpx;
  line-height: 80rpx;
  font-size: 36rpx;
  text-align: center;
  transition: all 0.2s;
}
.browser .btnGrp .button.btn-hover {
  transform: scale(0.85);
}
.browser .btnGrp .button.pink {
  width: 50%;
  color: white;
  background: #FF3366;
  margin-left: 3%;
  margin-right: 5%;
}
.browser .btnGrp .button.white {
  width: 270rpx;
  border: 1px solid #FF3366;
  color: #FF3366;
  background: white;
  margin-left: 5%;
}
