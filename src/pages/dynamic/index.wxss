page {
  width: 100%;
  height: 100%;
  overflow-y: hidden;
}
.page-dynamic {
  position: relative;
  width: 100%;
  height: 100%;
  padding-top: 130rpx;
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}
.page-dynamic .pic-section {
  position: relative;
  width: 690rpx;
}
.page-dynamic .pic-section .raw {
  position: absolute;
  left: 0;
  top: 0;
  width: 690rpx;
  height: 920rpx;
}
.page-dynamic .pic-section .raw.hidden {
  opacity: 0;
}
.page-dynamic .pic-section .crop {
  position: relative;
  width: 690rpx;
  height: 920rpx;
  overflow: hidden;
  box-shadow: 0px 2px 4px 0px rgba(0, 0, 0, 0.3);
}
.page-dynamic .pic-section .crop.hidden {
  opacity: 0;
}
.page-dynamic .pic-section .crop .background-image {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
}
.page-dynamic .pic-section .crop .raw-image {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
}
.page-dynamic .button-section {
  margin-top: 20px;
}
.page-dynamic .button-section.high {
  margin-top: 60px;
}
.page-dynamic .canvas-wrap {
  position: fixed;
  left: 0;
  bottom: -3050px;
  z-index: -2;
  opacity: 0;
  visibility: none;
}
.page-dynamic .btn-wrap {
  width: 690rpx;
}
.page-dynamic .btn-wrap .btn-1 {
  margin-top: 40rpx;
}
.page-dynamic .btn-wrap .btn-2 {
  margin-top: 30rpx;
  width: 49%;
  float: left;
}
.page-dynamic .btn-wrap .btn-3 {
  margin-top: 30rpx;
  width: 49%;
  float: right;
}
