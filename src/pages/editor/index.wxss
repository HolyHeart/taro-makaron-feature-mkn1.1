page {
  width: 100%;
  height: 100%;
  overflow-y: hidden;
}
.page-editor {
  position: relative;
  width: 100%;
  height: 100%;
  padding-top: 130rpx;
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}
.page-editor .pic-section {
  position: relative;
  width: 690rpx;
  height: 920rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}
.page-editor .pic-section .raw {
  position: absolute;
  left: 50%;
  transition: all 0.2s;
  top: 50%;
  width: 690rpx;
  height: 920rpx;
  transform: translateX(-50%) translateY(-50%);
}
.page-editor .pic-section .raw.hidden {
  opacity: 0;
}
.page-editor .pic-section .crop {
  position: relative;
  width: 690rpx;
  height: 920rpx;
  transition: all 0.2s;
  overflow: hidden;
  box-shadow: 0px 2px 4px 0px rgba(0, 0, 0, 0.3);
}
.page-editor .pic-section .crop.hidden {
  opacity: 0;
}
.page-editor .pic-section .crop .background-image {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
}
.page-editor .pic-section .crop .raw-image {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
}
.page-editor .button-section {
  margin-top: 20px;
}
.page-editor .button-section.high {
  margin-top: 60px;
}
.page-editor .canvas-wrap {
  position: fixed;
  left: 0;
  bottom: -3050px;
  z-index: -2;
  opacity: 0;
  visibility: none;
}
.page-editor .btn-wrap {
  width: 690rpx;
}
.page-editor .btn-wrap .btn-1 {
  margin-top: 40rpx;
}
.page-editor .btn-wrap .btn-2 {
  margin-top: 30rpx;
}
