page {
  width: 100%;
  height: 100%;
  overflow-y: hidden;
}
.page-editor {
  position: relative;
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.page-editor .page-bg {
  position: fixed;
  z-index: 0;
}
.page-editor .pic-area {
  width: 90%;
  margin-left: 5%;
  margin-right: 5%;
  align-items: center;
  justify-content: center;
  text-align: center;
  z-index: 1;
}
.page-editor .pic-area .pic-block {
  width: 100%;
  display: inline-block;
  vertical-align: middle;
}
.page-editor .pic-area .error-outer-block {
  display: inline-block;
  vertical-align: middle;
}
.page-editor .pic-area .error-outer-block.error-hover {
  transform: scale(0.85);
}
.page-editor .pic-area .error-outer-block .error-block {
  width: 100%;
  display: flex;
}
.page-editor .btn-wrap {
  height: 300px;
  width: 690rpx;
  bottom: 0;
  position: fixed;
}
.page-editor .btn-wrap .btn-1 {
  margin-top: 40px;
}
.page-editor .btn-wrap .btn-2 {
  margin-top: 30px;
  margin-bottom: 30px;
}
